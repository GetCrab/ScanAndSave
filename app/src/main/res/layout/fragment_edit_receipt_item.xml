<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_marginTop="@dimen/marginXL"
        android:layout_marginStart="@dimen/marginXL"
        android:layout_marginEnd="@dimen/marginXL"
        android:paddingStart="@dimen/marginS"
        android:paddingTop="@dimen/marginXS"
        android:paddingBottom="@dimen/marginXS"
        android:drawablePadding="@dimen/marginM"
        android:textSize="@dimen/textXL"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginXL"
        android:layout_marginTop="@dimen/marginS"
        android:layout_marginEnd="@dimen/marginXL"
        android:layout_marginBottom="@dimen/marginL"
        android:paddingStart="@dimen/marginM"
        android:paddingTop="@dimen/marginXS"
        android:paddingBottom="@dimen/marginXS"
        android:drawablePadding="@dimen/marginM"
        android:gravity="center_vertical"
        android:text="@string/edit"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textXL"
        app:drawableStartCompat="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete" />

</androidx.constraintlayout.widget.ConstraintLayout>